= simple_form_for([:admin, @article], html: {class: 'form-horizontal'}, defaults: {input_html: {class: 'input-xlarge'}}) do |f|
  %legend= yield :form_title
  = f.error_notification
  .form-inputs
    = f.input :title
    = f.input :subtitle
    = f.input :section, as: :taxonomy, input_html: {class: 'input-medium'}
    = f.association :authors, as: :text_list, value_method: :name, input_html: {class: 'staff-picker', autocomplete: 'off'}
    = f.input :teaser, as: :text, input_html: {rows: 3, class: 'input-xxlarge'}
    = f.input :body, input_html: {rows: 5, class: 'input-xxlarge'}, hint: "Click #{link_to 'here', 'http://daringfireball.net/projects/markdown/syntax', target: '_blank'} for Markdown syntax reference (italics, bold, links, etc.)"
    = f.association :image, as: :image_picker
  .form-actions
    = f.button :submit, class: 'btn btn-large btn-primary'
    - if not @article.new_record?
      = link_to "Delete Article", [:admin, @article], method: :delete, confirm: "Are you sure?", class: 'btn btn-large btn-danger'

%script#image-select-template{type: 'text/template'}= render 'admin/templates/image-select'
