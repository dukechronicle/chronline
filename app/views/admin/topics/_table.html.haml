%table.table.table-striped
  %thead
    %tr
      %th= title
      %th Description
      %th Created Date
      %th Edit
      %th Archive
      %th Delete
  %tbody
  - topics.each do |topic|
    %tr{id: "topic_#{topic.id}"}
      %td= link_to topic.title, admin_topic_path(topic)
      %td= topic.description
      %td= topic.created_at.strftime('%-m-%-d-%Y')
      %td= link_to "Edit", [:edit, :admin, topic], class: 'btn btn-mini'
      %td= link_to archive_toggle(topic.archived), archive_admin_topic_path(topic.id), method: :archive, class: 'btn btn-mini'
      %td= link_to "Delete", admin_topic_path(topic.id), method: :delete, class: 'btn btn-mini'