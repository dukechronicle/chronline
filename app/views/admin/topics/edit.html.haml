%btn.pull-left= link_to "All Topics", site_topics_path, class: 'btn'

= simple_form_for([:admin, @topic], html: {class: 'form-horizontal'}, defaults: {input_html: {class: 'input-xlarge'}}) do |f|
  %legend= yield :form_title
  = f.error_notification
  .form-inputs
    = f.input :description

  .form-actions
    = f.button :submit, class: 'btn btn-large btn-primary'

- content_for :scripts do
  = tinymce_assets
