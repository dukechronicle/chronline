- title ||= nil
- details = local_assigns.has_key?(:details) ? details : true
.opinion-articles
  h3.section-title= title
  ul.small-block-grid-1.medium-block-grid-2
    - articles.each_with_index do |article, i|
      li.opinion-article
        a.hover.list-story.highlight-left(href=site_post_path(article))
          - if details
            .subtitle
              span= article.section.name
          h3.title= article.title
          - if details
            .subtitle
              span By #{byline(article)}
          - if article.authors.first.headshot
            = cropped_image_tag article.authors.first.headshot, :square_70x, class: 'headshot'
          - if details || i == 0
            p.teaser= article.teaser
