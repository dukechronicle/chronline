.clearfix.align-group
  .span-8.align-element{data: {alignprimary: "true"}}
    #slideshow.rounded
      .image-container!= @model.slideshow
    .clearfix
      .span-4= render partial: 'beta/containers/block/square', locals: {article: @model.speaker_articles[0]}
      .span-4.last= render partial: 'beta/containers/block/square', locals: {article: @model.speaker_articles[1]}
  .span-4.last.align-element{data: {aligntarget: ".rounded"}}
    #schedule
      %h2.vertical-label Schedule
      .rounded
        .article-container!= @model.schedule

.clearfix.align-group
  - if @model.freshman
    .span-3.align-element{data: {aligntarget: ".rounded"}}= render partial: 'beta/containers/block/wide', locals: {title: "Freshman Year", article: @model.freshman}
  - if @model.sophomore
    .span-3.align-element{data: {aligntarget: ".rounded"}}= render partial: 'beta/containers/block/wide', locals: {title: "Sophomore Year", article: @model.sophomore}
  - if @model.junior
    .span-3.align-element{data: {aligntarget: ".rounded"}}= render partial: 'beta/containers/block/wide', locals: {title: "Junior Year", article: @model.junior}
  - if @model.senior
    .span-3.last.align-element{data: {aligntarget: ".rounded"}}= render partial: 'beta/containers/block/wide', locals: {title: "Senior Year", article: @model.senior}

.clearfix
  - (@model.articles || []).each_with_index do |article, i|
    .span-3{class: (i % 4 == 3 ? 'last' : nil)}= render partial: 'beta/containers/block/wide', locals: {article: article, show_image: false}
