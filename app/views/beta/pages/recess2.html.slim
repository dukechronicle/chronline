.page-main-wrap
  = render partial: 'beta/partials/section-gallery-top', locals: {slideshow_articles: @model.slideshow, slideshow_pages: [], pages_first: false, top_news: @model.slideshow}
  .row.page-container
    .page-front
      .section-column-container.page-content-column.columns.small-12.medium-11.medium-push-1
        section.row.column-row
          .columns.small-12.medium-push-8.medium-4
            = render partial: 'beta/partials/article-horizontal-list', locals: {title: "Editor's Notes", articles: @model.editors_notes, show_teaser: true, grid_width: 2}
          .columns.small-12.medium-pull-4.medium-8.border-right
            = render partial: 'beta/partials/article-horizontal-list', locals: {title: 'Playground', articles: @model.playground, show_teaser: true}
        section.row.column-row
          .columns.small-12
            = render partial: 'beta/partials/article-horizontal-list', locals: {title: 'More Articles', articles: @model.more_articles, show_teaser: false}
