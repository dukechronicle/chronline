- slideshow_articles = @model.featured_stories.map {|article_hash| article_hash['article'] }
- slideshow_display_tags = @model.featured_stories.map {|article_hash| article_hash['headline'] }
.page-main-wrap
  .row.page-container
    .page-front data-equalizer=""
      .section-column-container.columns.page-content-column.small-12.medium-7.medium-push-1 data-equalizer-watch=""
        section.row.section-active.section-slideshow
          header.columns.small-12
            h2 Slideshow
          #slideshow-wrapper= render partial: 'beta/partials/section_page-slideshow', locals: {articles: slideshow_articles, pages: [], pages_first: true, display_tags: slideshow_display_tags}
          .columns.small-12
            = render partial: 'beta/containers/article-list', locals: { title: "Recent", articles: @model.stories, style: :teaser}
          .columns.small-12.medium-6
            .column-inner
              a(href="https://twitter.com/#{@model.twitter}")
                .image-container
                  = image_tag 'social-media/twitter.png'
          .columns.small-12.medium-6
            .column-inner
              a(href="https://twitter.com/#{@model.facebook}")
                .image-container
                  = image_tag 'social-media/facebook.png'
      .section-column-container.columns.small-12.medium-1.medium-pull-7 data-equalizer-watch=""
        = render partial: 'beta/partials/widget-sidebar'

      .section-column-container.columns.small-12.medium-4.top-news-container data-equalizer-watch=""
        section.row
          header.columns.small-12
            h2 Game Details
          = render partial: 'beta/partials/sports-event-info', locals: {title: 'Game Details', info: @model.information, game_info: ESPN.new.game_information(@model.information['espn_url'])}
        = render partial: 'beta/partials/advertisement', locals: {zone: :medium_rectangle}
        section.row
          header.columns.small-12
            h2 Standings
          .columns.small-12
            = render partial: 'beta/containers/sports-standings', locals: {url: @model.standings_url}
        section.row
          header.columns.small-12
            h2 Twitter
          .twitter
            - @model.twitter_widgets.each do |widget_id|
              a.twitter-timeline(data-widget-id=widget_id)
