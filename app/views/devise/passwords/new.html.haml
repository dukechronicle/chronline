- provide :title, "Forgot your password?"

.span-8
  .rounded
    .form-container
      = render 'beta/partials/flash', flash: flash
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification
        %fieldset
          .form-inputs
            = f.input :email, required: true, autofocus: true
          .form-actions
            = f.button :submit, "Send me reset password instructions", class: 'button button-rounded button-primary'

      = render 'devise/shared/links'

.span-4.last
  = render partial: 'beta/partials/advertisement', locals: {zone: :medium_rectangle}
