- provide :title, 'Sign up'


.rounded.clearfix.align-group
  .span-6.align-element{data: {aligntarget: 'fieldset'}}
    .form-container
      = render 'site/partials/flash', flash: flash
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = f.error_notification
        %fieldset
          .form-inputs
            = f.input :first_name , required: true
            = f.input :last_name , required: true
            = f.input :email, required: true
            = f.input :password, required: true
            = f.input :password_confirmation, required: true

          .form-actions
            = f.button :submit, "Sign up", class: 'button button-rounded button-primary'

          = render 'devise/shared/links'

  .span-6.last.align-element{data: {aligntarget: 'fieldset'}}
    .form-container
      %fieldset
        = link_to '', omniauth_authorize_path(resource_name, :facebook), class: 'facebook-login'
        = link_to '', omniauth_authorize_path(resource_name, :google_oauth2), class: 'google-login'

