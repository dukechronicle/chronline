- provide :title, @article.title

- content_for :title_block do
  %h1
    - @article.section.parents.each_with_index do |parent, i|
      - if i > 0
        &raquo;
      = link_to parent.name, "/section#{parent.to_s}"

- content_for :administrative_links do
  = link_to "Edit this article", edit_admin_article_url(@article, subdomain: :admin)

- content_for :twitter_card do
  = render partial: 'partials/twitter_cards/article', locals: {article: @article}

- content_for :open_graph_tags do
  = render partial: 'partials/open-graph/article', locals: {article: @article}


%article#article
  .span-8
    .rounded
      .article-container
        %h1.title= @article.title
        - if not @article.subtitle.blank?
          %h2.subtitle= @article.subtitle

        - if @article.image
          = image_tag @article.image.original.url(:large_rect), class: 'main-image'
          .clearfix
            .photo-credit
              %span= photo_credit(@article.image)
            - if not @article.image.caption.blank?
              %p.photo-caption= @article.image.caption

        %p.byline
          %span.author By #{byline(@article, link: true)}
          %span.sep= "|"
          %span.date= display_date(@article)

        .article-body
          #social-media
            %div.comment-link
              %i.icons-comment
              = link_to "Comments", "#disqus_thread"
            %div.print-link
              %i.icons-print
              = link_to "Print", site_print_article_path(@article)
            %div.email-link
              %i.icons-email
              = link_to "Email", "mailto:?subject=%s&body=%s" % [mailto_subject(@article), mailto_body(@article)]
            %div
              .fb-like{data: {href: site_article_url(@article), send: "false", layout: "button_count", width: "130", 'show-faces' => "false", font: "lucida grande", action: "recommend"}}
            %div
              %a.twitter-share-button{href: "https://twitter.com/share", data: {via: "dukechronicle", url: site_article_url(@article)}} Tweet
            %div
              .g-plusone{data: {size: "medium", annotation: "bubble", href: site_article_url(@article)}}

          != @article.render_body

    #disqus_thread.rounded{data: {disqus: disqus_options(@article)}}

  .span-4.last
    = render partial: 'site/partials/advertisement', locals: {zone: :medium_rectangle}
    .title-small= render partial: 'site/containers/article-list', locals: {title: 'Related', articles: @related, style: :subhead}
    = render 'site/partials/facebook-recommended'

= render 'site/partials/facebook-social-share'
