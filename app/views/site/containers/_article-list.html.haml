- notime ||= true

.article-list
  %h2.vertical-label= title
  .rounded
    .content-container
      - articles.each_with_index do |article, i|
        %a.list-story.hover.highlight-right{href: site_article_path(article)}
          - if style
            = render partial: "site/containers/article-list/#{style}", locals: {article: article, first: (i == 0), options: {notime: notime}}
          - else
            %h3.title= article.title
