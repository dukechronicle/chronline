.clearfix.align-group
  .span-8
    != @model.slideshow_embed
    != @model.large_embed
  .span-4.last.align-element
    = render partial: 'site/partials/video', locals: {video: @model.video }
    - (@model.side_articles || []).each_with_index do |article, i|
      .span-4{class: (i % 3 == 2 ? 'last' : nil)}= render partial: 'site/containers/block/square', locals: {article: article}
