- provide :title, @staff.name
- provide :description, "Recent and archived #{action_name} by #{@staff.name} of The Chronicle at Duke University."

- content_for :administrative_links do
  = link_to "Edit staff profile", edit_admin_staff_url(@staff, subdomain: :admin)

- content_for :head do
  = render partial: 'site/partials/open-graph/staff', locals: {staff: @staff}

- content_for :title_block do
  %h1= @staff.name

.span-7
  - @posts.each do |post|
    .rounded
      %a.hover{href: site_post_path(post)}
        .content-container
          %h3= post.title
          = render partial: 'site/articles/subtitle', locals: {article: post, notime: true}
          %p= post.teaser

  = will_paginate @posts

.span-5.last= render partial: 'site/containers/staff-profile', locals: {staff: @staff, except: action_name.to_sym}
